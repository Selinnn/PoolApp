<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="5">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="243dp"
            android:layout_height="187dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="170dp"
            app:srcCompat="@android:drawable/gallery_thumb" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="20dp"
            android:text="Selin Kaplan"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_yeni_uye"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="20dp"
            android:text="Yeni Üye Kayıt"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_yoklama"
            android:layout_width="195dp"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="20dp"
            android:text="Yoklama"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_uye_guncelle"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="20dp"
            android:text="Üye Güncelleme"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_uye_sil"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="20dp"
            android:text="Üye Kayıt Silme"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_ayarlar"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_marginTop="20dp"
            android:text="Ayarlar"
            android:textSize="20sp" />

    </GridLayout>


</LinearLayout>