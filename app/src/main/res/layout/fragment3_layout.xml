<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/kangrubu_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="Kan Grubu : "/>
    <Spinner
        android:layout_marginTop="10dp"
        android:id="@+id/kangr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/kangrubu"
        android:prompt="@string/kangrubusec"
        android:spinnerMode="dialog"
        android:padding="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/saglıkproblemi_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:text="Sağlık Problemi(Varsa): "/>
        <EditText
            android:id="@+id/saglikproblemi_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ameliyat_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:text="Geçirdiği Ameliyatlar : "/>
        <EditText
            android:id="@+id/ameliyat_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ilac_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:text="Kullandığı İlaçlar (Varsa) : "/>
        <EditText
            android:id="@+id/ilac_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="20dp"/>
    </LinearLayout>


</android.support.v7.widget.LinearLayoutCompat>