<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_marginStart="220dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="64dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/gallery_thumb" />

    <Button
        android:id="@+id/fotoEkle"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="40dp"
        android:background="@color/button_color"
        android:text="@string/foto_ekle"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/ad_text"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="60dp"
        android:text="@string/ad"
        android:textColor="@color/button_color"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fotoEkle" />

    <EditText
        android:id="@+id/ad_edit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="@string/ad_gir_hint"
        android:inputType="textPersonName"
        android:textColorHint="@color/toolbar_color"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/ad_text"
        app:layout_constraintTop_toBottomOf="@+id/fotoEkle" />

    <TextView
        android:id="@+id/soyad_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:text="@string/soyad"
        android:textColor="@color/button_color"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ad_text" />

    <EditText
        android:id="@+id/soyad_edit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="@string/soyad_gir_hint"
        android:inputType="textPersonName"
        android:textColorHint="@color/toolbar_color"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/soyad_text"
        app:layout_constraintTop_toBottomOf="@+id/ad_edit" />

    <TextView
        android:id="@+id/tc_text"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="19dp"
        android:text="@string/tc_kimlik"
        android:textColor="@color/button_color"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soyad_text" />

    <EditText
        android:id="@+id/tc_edit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="11"
        app:layout_constraintStart_toEndOf="@+id/tc_text"
        app:layout_constraintTop_toBottomOf="@+id/soyad_edit" />

    <Button
        android:id="@+id/btn_datepicker"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="25dp"
        android:background="@color/button_color"
        android:text="@string/tarih_seciniz"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tc_edit" />

    <TextView
        android:id="@+id/date_txt"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textColor="@color/button_color"
        android:textSize="24sp"
        android:layout_marginStart="250dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_datepicker"/>



</android.support.constraint.ConstraintLayout>